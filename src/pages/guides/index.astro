---
import Layout from "../../layouts/Layout.astro";
import "../../styles/main.css";

const tasks = await Astro.glob("../guides/*.mdx");
---

<Layout title="Tasks | Thomas Lower Programming Guides">
  <main>
    <h1>Documentation</h1>
    <h2>These docs will walk you through the various aspects of a programming language</h2>
    <h2>Pick a task to get started:</h2>
    <ul>
      {tasks.map((task) => <a href={task.url}>{task.frontmatter.title}</a>)}
    </ul>
  </main>
</Layout>
